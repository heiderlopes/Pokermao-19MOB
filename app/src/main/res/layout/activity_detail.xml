<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pokedex"
                android:id="@+id/imageView2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/charizard"
                android:id="@+id/ivPokemon"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline5"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline7"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                android:layout_marginEnd="8dp"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline5"
                app:layout_constraintGuide_percent="0.28"
                android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline6"
                app:layout_constraintGuide_percent="0.08"
                android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline7"
                app:layout_constraintGuide_percent="0.69"
                android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline8"
                app:layout_constraintGuide_percent="0.9"
                android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline"
                app:layout_constraintGuide_percent="0.22"
                android:orientation="horizontal"/>

        <TextView
                android:fontFamily="@font/pokemon"
                android:textColor="#FF5722"
                android:text="006 Charizard"
                android:textSize="20sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeStepGranularity="2sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/tvPokemonName"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@+id/guideline"
                app:layout_constraintBottom_toTopOf="@+id/guideline5"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:textColor="#666666"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="Charizard flies around the sky in search of powerful opponents. It breathes fire of such great heat that it melts anything. However, it never turns its fiery breath on any opponent weaker than itself."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvPokemonDescription"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline10"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline11"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="@+id/guideline12"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline9"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline9"
                app:layout_constraintGuide_percent="0.87"
                android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline10"
                app:layout_constraintGuide_percent="0.97"
                android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline11"
                app:layout_constraintGuide_percent="0.94"
                android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline12"
                app:layout_constraintGuide_percent="0.04"
                android:orientation="vertical"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>